<!-- Validation failure messages -->
<% if @theme.errors.any? %>
  <% @theme.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Theme</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_theme" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for category -->
      <div class="form-group">
        <label for="category" class="control-label">
          Category
        </label>

        <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="<%= @theme.category %>">
      </div>

      <button class="btn btn-success">
        Create Theme
      </button>
      or
      <a href="/themes">Cancel</a>
    </form>
  </div>
</div>
