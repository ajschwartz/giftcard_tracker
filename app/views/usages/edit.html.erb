<!-- Validation failure messages -->
<% if @usage.errors.any? %>
  <% @usage.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Usage #<%= @usage.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_usage/<%= @usage.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for giftcard_id -->
        <input type="hidden" id="giftcard_id" name="giftcard_id" value="<%= @usage.giftcard_id %>">

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="date" id="date" name="date" placeholder="Date" class="form-control" value="<%= @usage.date.to_formatted_s(:long) %>">
      </div>

      <!-- Label and input for purchase -->
      <div class="form-group">
        <label for="purchase" class="control-label">
          Purchase
        </label>

        <input type="text" id="purchase" name="purchase" placeholder="Purchase" class="form-control" value="<%= @usage.purchase %>">
      </div>

      <!-- Label and input for amount -->
      <div class="form-group">
        <label for="amount" class="control-label">
          Amount
        </label>

        <input type="text" id="amount" name="amount" placeholder="Amount" class="form-control" value="<%= number_to_currency(@usage.amount) %>">
      </div>

      <!-- Label and input for user_id -->

        <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-warning">
        Update Usage
      </button>
      or
      <a href="/usages/<%= @usage.id %>">Cancel</a>
    </form>
  </div>
</div>
