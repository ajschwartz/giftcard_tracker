<div class="page-header">
  <h1>
    Usages
    <a href="/usages/new" class="btn btn-lg btn-success">New Usage</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Giftcard Retailer</th>
        <th>Giftcard Amount</th>
        <th>Date</th>
        <th>Purchase</th>
        <th>Usage Amount</th>
        <th>Actions</th>
      </tr>

      <% @usages.each do |usage| %>
      <% if usage.giftcard.user_id == current_user.id %>
      <tr>
        <td><%= usage.giftcard.retailer.name %></td>
        <td><%= number_to_currency(usage.giftcard.amount) %></td>
        <td><%= usage.date.to_formatted_s(:long) %></td>
        <td><%= usage.purchase %></td>
        <td><%= number_to_currency(usage.amount) %></td>
        <td>
          <a href="/usages/<%= usage.id %>" class="btn btn-primary"><i class="fa fa-info" aria-hidden="true"></i></a>
          <a href="/usages/<%= usage.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <a href="/delete_usage/<%= usage.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% else %>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
