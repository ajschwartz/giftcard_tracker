<div class="page-header">
  <h1>
    Usages
    <a href="/usages/new" class="btn btn-lg btn-success">New Usage</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Giftcard #</th>
        <th>Date</th>
        <th>Purchase</th>
        <th>Amount</th>
        <th>Actions</th>
      </tr>

      <% @usages.each do |usage| %>
      <% if usage.giftcard.user_id == current_user.id %>
      <tr>
        <td><%= usage.giftcard.code %></td>
        <td><%= usage.date.to_formatted_s(:long) %></td>
        <td><%= usage.purchase %></td>
        <td><%= number_to_currency(usage.amount) %></td>
        <td>
          <a href="/usages/<%= usage.id %>" class="btn btn-primary">Show</a>
          <a href="/usages/<%= usage.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_usage/<%= usage.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% else %>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
