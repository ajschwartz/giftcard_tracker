<!-- Validation failure messages -->
<% if @usage.errors.any? %>
  <% @usage.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Usage</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_usage" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for giftcard_id -->
      <div class="form-group">
        <label for="giftcard_id" class="control-label">
          Giftcard
        </label>

        <input type="text" id="giftcard_id" name="giftcard_id" placeholder="Giftcard" class="form-control" value="<%= @usage.giftcard_id %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @usage.date %>">
      </div>

      <!-- Label and input for purchase -->
      <div class="form-group">
        <label for="purchase" class="control-label">
          Purchase
        </label>

        <input type="text" id="purchase" name="purchase" placeholder="Purchase" class="form-control" value="<%= @usage.purchase %>">
      </div>

      <!-- Label and input for amount -->
      <div class="form-group">
        <label for="amount" class="control-label">
          Amount
        </label>

        <input type="text" id="amount" name="amount" placeholder="Amount" class="form-control" value="<%= @usage.amount %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @usage.user_id %>">
      </div>

      <button class="btn btn-success">
        Create Usage
      </button>
      or
      <a href="/usages">Cancel</a>
    </form>
  </div>
</div>
