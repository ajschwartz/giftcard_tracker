<div class="page-header">
  <h1>
    Giftings
    <a href="/giftings/new" class="btn btn-lg btn-success">New Gifting</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Giver</th>
        <th>Giftcard #</th>
        <th>Date Received</th>
        <th>Actions</th>
      </tr>

      <% @giftings.each do |gifting| %>
      <% if gifting.giftcard.user_id == current_user.id %>
      <tr>
        <td><%= gifting.giver.name %></td>
        <td><%= gifting.giftcard.code %></td>
        <td><%= gifting.giftcard.date %></td>
        <td>
          <a href="/giftings/<%= gifting.id %>" class="btn btn-primary">Show</a>
          <a href="/giftings/<%= gifting.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_gifting/<%= gifting.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% else %>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
