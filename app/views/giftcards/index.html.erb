<div class="page-header">
  <h1>
    Giftcards
    <a href="/giftcards/new" class="btn btn-lg btn-success">New Giftcard</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Retailer</th>
        <th>Code</th>
        <th>Expiration</th>
        <th>Cardcvv</th>
        <th>Notes</th>
        <th>Theme</th>
        <th>Actions</th>
      </tr>

      <% @giftcards.each do |giftcard| %>
      <tr>
        <td><%= giftcard.user_id %></td>
        <td><%= giftcard.amount %></td>
        <td><%= giftcard.date %></td>
        <td><%= giftcard.retailer_id %></td>
        <td><%= giftcard.code %></td>
        <td><%= giftcard.expiration %></td>
        <td><%= giftcard.cardcvv %></td>
        <td><%= giftcard.notes %></td>
        <td><%= giftcard.theme_id %></td>
        <td>
          <a href="/giftcards/<%= giftcard.id %>" class="btn btn-primary">Show</a>
          <a href="/giftcards/<%= giftcard.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_giftcard/<%= giftcard.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
