<div class="page-header">
  <h1>
    Retailers
    <a href="/retailers/new" class="btn btn-lg btn-success">New Retailer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Website</th>
        <th>Actions</th>
      </tr>

      <% @retailers.each do |retailer| %>
      <tr>
        <td><%= retailer.name %></td>
        <td><%= retailer.website %></td>
        <td>
          <a href="/retailers/<%= retailer.id %>" class="btn btn-primary">Show</a>
          <a href="/retailers/<%= retailer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_retailer/<%= retailer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
