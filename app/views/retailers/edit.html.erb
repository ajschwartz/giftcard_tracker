<!-- Validation failure messages -->
<% if @retailer.errors.any? %>
  <% @retailer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Retailer #<%= @retailer.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_retailer/<%= @retailer.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @retailer.name %>">
      </div>

      <!-- Label and input for website -->
      <div class="form-group">
        <label for="website" class="control-label">
          Website
        </label>

        <input type="text" id="website" name="website" placeholder="Website" class="form-control" value="<%= @retailer.website %>">
      </div>

      <button class="btn btn-warning">
        Update Retailer
      </button>
      or
      <a href="/retailers/<%= @retailer.id %>">Cancel</a>
    </form>
  </div>
</div>
