<div class="page-header">
  <h1>
    Givers
    <a href="/givers/new" class="btn btn-lg btn-success">New Giver</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>

      <% @givers.each do |giver| %>
      <% if giver.user_id == current_user.id %>
      <tr>
        <td><%= giver.name %></td>
        <td><%= giver.email %></td>
        <td>
          <a href="/givers/<%= giver.id %>" class="btn btn-primary">Show</a>
          <a href="/givers/<%= giver.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_giver/<%= giver.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% else %>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
