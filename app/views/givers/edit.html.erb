<!-- Validation failure messages -->
<% if @giver.errors.any? %>
  <% @giver.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit profile for: <strong><%= @giver.name %></strong> </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_giver/<%= @giver.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @giver.name %>">
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="control-label">
          Email
        </label>

        <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @giver.email %>">
      </div>

      <!-- Label and input for user_id -->
        <input type="hidden" id="user_id" name="user_id" value="<%= @giver.user_id %>">

      <button class="btn btn-warning">
        Update Giver
      </button>
      or
      <a href="/givers">Cancel</a>
    </form>
  </div>
</div>
